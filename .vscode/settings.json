{
    "python.defaultInterpreter": "./backend/myworld/Scripts/python.exe",
    "python.pythonPath": "./backend/myworld/Scripts/python.exe",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.envFile": "${workspaceFolder}/backend/.env",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "./backend/myworld/Scripts/flake8.exe",
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "./backend/myworld/Scripts/black.exe",
    "python.analysis.extraPaths": [
        "./backend",
        "./backend/apps"
    ],
    "python.analysis.autoSearchPaths": true,
    "python.analysis.autoImportCompletions": true,
    "pylance.insidersChannel": "off",
    "files.associations": {
        "*.py": "python"
    },
    "python.analysis.typeCheckingMode": "basic"
}
